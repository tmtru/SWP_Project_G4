<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>homeRooms</servlet-name>
        <servlet-class>controller.homeRooms</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homeCategory</servlet-name>
        <servlet-class>controller.homeCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadRoomsHome</servlet-name>
        <servlet-class>controller.loadRoomsHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>classifyRoomHome</servlet-name>
        <servlet-class>controller.classifyRoomHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>filterRoomsHome</servlet-name>
        <servlet-class>controller.filterRoomsHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeRooms</servlet-name>
        <url-pattern>/homer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controller.register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeCategory</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadRoomsHome</servlet-name>
        <url-pattern>/allrooms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>classifyRoomHome</servlet-name>
        <url-pattern>/classify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>filterRoomsHome</servlet-name>
        <url-pattern>/filterrooms</url-pattern>
    </servlet-mapping>
</web-app>
